{
  "swagger": "2.0",
  "info": {
    "title": "Technology Tasks API",
    "description": "API for managing technology-related tasks.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/tasks": {
      "get": {
        "summary": "Get all tasks",
        "responses": {
          "200": {
            "description": "A list of tasks",
            "schema": {
              "type": "object",
              "properties": {
                "tasks": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/Task"}
                }
              }
            }
          }
        }
      }
    },
    "/task": {
      "post": {
        "summary": "Add a new task",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {"$ref": "#/definitions/Task"}
          }
        ],
        "responses": {
          "200": {"description": "Task added"}
        }
      }
    },
    "/task/{name}": {
      "get": {
        "summary": "Get a task by name",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A task",
            "schema": {"$ref": "#/definitions/Task"}
          },
          "404": {"description": "Task not found"}
        }
      },
      "delete": {
        "summary": "Delete a task by name",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {"description": "Task deleted"},
          "404": {"description": "Task not found"}
        }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "description": {"type": "string"}
      }
    }
  }
}
